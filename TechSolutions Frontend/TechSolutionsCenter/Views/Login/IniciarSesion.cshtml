@model UsuarioModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Focus - Bootstrap Admin Dashboard</title>

    <!-- Favicon -->

    <!-- CSS principal -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <style>
        /* Imagen de fondo */
        body {
            background: url("https://static.vecteezy.com/system/resources/previews/025/074/883/non_2x/concept-of-online-support-and-customer-service-hotline-for-contact-and-advice-customer-service-reception-for-initial-troubleshooting-communicating-and-responding-to-client-technical-support-free-photo.jpg") no-repeat center center fixed;
            background-size: cover;
        }

        /* Contenedor del formulario con mayor ancho */
        .authincation-content {
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 1s ease-in-out, transform 1s ease-in-out;
            width: 500px; /* Aumenté el ancho */
            padding: 40px; /* Más espacio interno */
            background: rgba(255, 255, 255, 0.95); /* Fondo más opaco para mejor visibilidad */
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

            /* Aplica la animación después de cargar la página */
            .authincation-content.show {
                opacity: 1;
                transform: translateY(0);
            }

        /* Campos de entrada más grandes */
        .form-control {
            font-size: 18px;
            padding: 12px;
        }

        /* Botón más grande */
        .btn-primary {
            font-size: 18px;
            padding: 12px;
        }
    </style>
</head>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh">
    <div class="d-flex flex-column justify-content-between">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10">
                <div class="card card-default mb-0">
                    <div class="card-header pb-0">
                        <div class="app-brand w-100 d-flex justify-content-center border-bottom-0">
                            <a class="w-auto pl-0" href="/index.html">
                                <img src="~/img/logo.png" alt="Mono">
                            </a>
                        </div>
                    </div>
                    <div class="card-body px-5 pb-5 pt-0">
                        <h4 class="text-dark mb-6 text-center">Iniciar Sesión</h4>
                        <form asp-controller="Login" asp-action="IniciarSesion">
                            <div class="row">
                                <div class="form-group col-md-12 mb-4">
                                    <label><strong>Email</strong></label>
                                    <input type="email" class="form-control input-lg" asp-for="Email" placeholder="Ingresa tu correo">
                                </div>
                                <div class="form-group col-md-12">
                                    <label><strong>Contraseña</strong></label>
                                    <input type="password" class="form-control input-lg" asp-for="Contrasenna" placeholder="Contraseña">
                                </div>
                                <div class="col-md-12">
                                    <div class="d-flex justify-content-between mb-3">
                                        <div class="custom-control custom-checkbox mr-3 mb-3">
                                            <input class="form-check-input" type="checkbox" id="basic_checkbox_1">
                                            <label class="form-check-label" for="basic_checkbox_1">Recordar Usuario</label>
                                        </div>
                                        <a class="text-color" href="@Url.Action("RecuperarContrasenna","Login")">Recuperar Contraseña</a>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-pill mb-4">Ingresar</button>
                                    <p>
                                        ¿No tienes una cuenta?
                                        <a class="text-blue" href="@Url.Action("Register","Login")">Regístrate</a>
                                    </p>
                                    <p>
                                        ¿Olvidaste tu contraseña?
                                        <a class="text-blue" href="@Url.Action("RecuperarContrasenna","Login")">Recuperar Acceso</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


    <!-- Scripts -->
    <script>
        // Espera a que la página cargue para activar la animación
        document.addEventListener("DOMContentLoaded", function() {
            document.querySelector(".authincation-content").classList.add("show");
        });
    </script>

