@{
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro - FideColab</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <style>
        /* Fondo con imagen */
        body {
            background: url("https://static.vecteezy.com/system/resources/previews/025/074/883/non_2x/concept-of-online-support-and-customer-service-hotline-for-contact-and-advice-customer-service-reception-for-initial-troubleshooting-communicating-and-responding-to-client-technical-support-free-photo.jpg") no-repeat center center fixed;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
        }

        /* Contenedor del formulario */
        .authincation-content {
            width: 500px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 1s ease-in-out, transform 1s ease-in-out;
        }

            /* Mostrar animación al cargar */
            .authincation-content.show {
                opacity: 1;
                transform: translateY(0);
            }

        /* Campos de entrada más grandes */
        .form-control {
            font-size: 18px;
            padding: 12px;
            border-radius: 8px;
        }

        /* Botón de registro */
        .btn-primary {
            font-size: 18px;
            padding: 12px;
            border-radius: 8px;
            transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
        }

            /* Efecto al pasar el mouse sobre el botón */
            .btn-primary:hover {
                background: #0056b3;
                transform: scale(1.05);
            }

        /* Enlace de inicio de sesión */
        .new-account a {
            font-weight: bold;
            text-decoration: none;
        }

            /* Efecto de animación en el enlace */
            .new-account a:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <div class="authincation-content">
        <h4 class="mb-4">Regístrate en tu cuenta</h4>
        <form action="index.html">
            <div class="form-group">
                <label><strong>Nombre de usuario</strong></label>
                <input type="text" class="form-control" placeholder="Ingresa tu nombre de usuario">
            </div>
            <div class="form-group">
                <label><strong>Correo electrónico</strong></label>
                <input type="email" class="form-control" placeholder="Ingresa tu correo">
            </div>
            <div class="form-group">
                <label><strong>Contraseña</strong></label>
                <input type="password" class="form-control" placeholder="Ingresa tu contraseña">
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-block">Registrarme</button>
            </div>
        </form>
        <div class="new-account mt-3">
            <p>¿Ya tienes una cuenta? <a class="text-primary" href="@Url.Action("Login", "Login")">Inicia sesión</a></p>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        // Agregar animación cuando la página cargue
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector(".authincation-content").classList.add("show");
        });
    </script>

</body>
</html>
