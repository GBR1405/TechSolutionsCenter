@model TechSolutionsCenter.Models.UsuarioModel

@{
    ViewData["Title"] = "Perfil";
    Layout = null;
}

<div class="container mt-5">
    <h1 class="mb-4">Perfil de Usuario</h1>

    <form>
        <div class="form-group">
            <label asp-for="Nombre_Usuario">Nombre de Usuario</label>
            <input asp-for="Nombre_Usuario" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Apellidos">Apellidos</label>
            <input asp-for="Apellidos" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Telefono">Teléfono</label>
            <input asp-for="Telefono" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Direccion">Dirección</label>
            <input asp-for="Direccion" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Email">Correo Electrónico</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="ID_Genero">Género</label>
            <input asp-for="ID_Genero" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="ID_Rol">Rol</label>
            <input asp-for="ID_Rol" class="form-control" readonly />
        </div>
        <hr>
        <div class="text-right">
            <a asp-action="ActualizarPerfil" asp-route-id="@Model.ID_Usuario" class="btn btn-primary">Actualizar</a>

            <a asp-action="EliminarPerfil" asp-route-id="@Model.ID_Usuario" class="btn btn-danger" onclick="return confirm('¿Está seguro de que desea eliminar su perfil?');">Eliminar</a>
        </div>
    </form>
</div>
