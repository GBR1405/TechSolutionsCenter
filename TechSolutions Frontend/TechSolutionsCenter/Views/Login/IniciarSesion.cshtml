@model UsuarioModel

@{
    Layout = null;
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Iniciar Sesión - TechSolutions</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <style>
        body {
            background: url("https://static.vecteezy.com/system/resources/previews/025/074/883/non_2x/concept-of-online-support-and-customer-service-hotline-for-contact-and-advice-customer-service-reception-for-initial-troubleshooting-communicating-and-responding-to-client-technical-support-free-photo.jpg") no-repeat center center fixed;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
        }

        .authincation-content {
            width: 500px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 1s ease-in-out, transform 1s ease-in-out;
        }

        .authincation-content.show {
            opacity: 1;
            transform: translateY(0);
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            margin-bottom: 15px;
            width: 100%;
        }

        .form-control {
            width: 100%;
            font-size: 18px;
            padding: 12px;
            border-radius: 8px;
        }

        .btn-primary {
            font-size: 18px;
            padding: 12px;
            border-radius: 8px;
            transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
        }

        .btn-primary:hover {
            background: #0056b3;
            transform: scale(1.05);
        }
    </style>
</head>

<body>
    <div class="authincation-content">
        <h3 class="mb-4">Iniciar Sesión</h3>
        <form asp-controller="Login" asp-action="IniciarSesion">
            <div class="form-group">
                <label><strong>Correo electrónico</strong></label>
                <input type="email" class="form-control" asp-for="Email">
            </div>
            <div class="form-group">
                <label><strong>Contraseña</strong></label>
                <input type="password" class="form-control" asp-for="Contrasenna">
            </div>
            <div class="d-flex justify-content-between mb-3">
                <div class="custom-control custom-checkbox mr-3 mb-3">
                    <input class="form-check-input" type="checkbox" id="basic_checkbox_1">
                    <label class="form-check-label" for="basic_checkbox_1">Recordar Usuario</label>
                </div>
                <a class="text-color" href="@Url.Action("RecuperarContrasenna","Login")">Recuperar Contraseña</a>
            </div>
            <button type="submit" class="btn btn-primary btn-pill mb-4">Ingresar</button>
            <p>
                ¿No tienes una cuenta?
                <a class="text-blue" href="@Url.Action("RegistrarCuenta","Login")">Regístrate</a>
            </p>
            <p>
                ¿Olvidaste tu contraseña?
                <a class="text-blue" href="@Url.Action("RecuperarContrasenna","Login")">Recuperar Acceso</a>
            </p>
        </form>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector(".authincation-content").classList.add("show");
        });
    </script>
</body>
