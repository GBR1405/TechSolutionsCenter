@model UsuarioModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro - TechSolutions</title>

    <!-- Estilos -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />

    <style>
        /* Fondo con imagen */
        body {
            background: url("https://static.vecteezy.com/system/resources/previews/025/074/883/non_2x/concept-of-online-support-and-customer-service-hotline-for-contact-and-advice-customer-service-reception-for-initial-troubleshooting-communicating-and-responding-to-client-technical-support-free-photo.jpg") no-repeat center center fixed;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            overflow: hidden;
        }

        /* Contenedor del formulario */
        .authincation-content {
            width: 500px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 1s ease-in-out, transform 1s ease-in-out;
        }

        /* Mostrar animación al cargar */
        .authincation-content.show {
            opacity: 1;
            transform: translateY(0);
        }

        /* Campos de entrada más grandes */
        .form-control {
            font-size: 18px;
            padding: 12px;
            border-radius: 8px;
        }

        /* Botón de registro */
        .btn-primary {
            font-size: 18px;
            padding: 12px;
            border-radius: 8px;
            transition: background 0.3s ease-in-out, transform 0.2s ease-in-out;
        }

        /* Efecto al pasar el mouse sobre el botón */
        .btn-primary:hover {
            background: #0056b3;
            transform: scale(1.05);
        }

        /* Enlace de inicio de sesión */
        .new-account a {
            font-weight: bold;
            text-decoration: none;
        }

        /* Efecto de animación en el enlace */
        .new-account a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh">
    <div class="d-flex flex-column justify-content-between">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-xl-5 col-md-10">
                <div class="card card-default mb-0 authincation-content">
                    <div class="card-header pb-0">
                        <div class="app-brand w-100 d-flex justify-content-center border-bottom-0">
                            <a class="w-auto pl-0" href="/index.html">
                                <img src="~/img/logo.png" alt="FideColab">
                            </a>
                        </div>
                    </div>
                    <div class="card-body px-5 pb-5 pt-0">
                        <h4 class="text-dark text-center mb-5">Registrar Cuenta</h4>
                        <form asp-controller="Login" asp-action="RegistrarCuenta">
                            <div class="row">

                                <div class="form-group col-md-12 mb-4">
                                    <input type="text" class="form-control input-lg" asp-for="NombreUsuario" placeholder="Nombre">
                                </div>

                                <div class="form-group col-md-12 mb-4">
                                    <input type="text" class="form-control input-lg" asp-for="Apellidos" placeholder="Apellidos">
                                </div>

                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control input-lg" asp-for="Telefono" placeholder="Teléfono">
                                </div>

                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control input-lg" asp-for="Email" placeholder="Correo">
                                </div>

                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control input-lg" asp-for="Direccion" placeholder="Dirección">
                                </div>

                                <div class="form-group col-md-12">
                                    <input type="text" class="form-control input-lg" asp-for="IdGenero" placeholder="Género">
                                </div>

                                <div class="form-group col-md-12">
                                    <input type="password" class="form-control input-lg" asp-for="Contrasenna" placeholder="Contraseña">
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-pill mb-4">Registrarse</button>
                                    <p>
                                        ¿Ya tienes una cuenta?
                                        <a class="text-blue" href="@Url.Action("IniciarSesion","Login")">Inicia Sesión</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Agregar animación cuando la página cargue
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector(".authincation-content").classList.add("show");
    });
</script>
