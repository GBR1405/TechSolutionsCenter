@model TechSolutionsCenter.Models.UsuarioModel

@{
    ViewData["Title"] = "Eliminar Perfil";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-danger text-white text-center">
            <h3>Eliminar Perfil</h3>
        </div>
        <div class="card-body">
            <h5 class="text-center mb-4">¿Estás seguro de que deseas eliminar este perfil?</h5>
            <dl class="row">
                <dt class="col-sm-4">ID Usuario:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ID_Usuario)</dd>
                <dt class="col-sm-4">Nombre:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre_Usuario) @Html.DisplayFor(model => model.Apellidos)</dd>
                <dt class="col-sm-4">Teléfono:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>
                <dt class="col-sm-4">Dirección:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Direccion)</dd>
                <dt class="col-sm-4">Correo Electrónico:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
            </dl>
            <form asp-action="EliminarPerfil" method="post" class="text-center">
                <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Cancelar</a>
            </form>
        </div>
    </div>
</div>